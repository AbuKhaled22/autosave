---
import PageLayout from '../../../layouts/PageLayout.astro';
import { getContentByLanguage } from '../../../lib/content';
import { getLocalizedPath } from '../../../lib/i18n';
import { getBlogPosts, getAllCategories, getAllTags } from '../../../lib/blog-data';

const lang = 'en' as const;
const content = getContentByLanguage(lang);
const blogContent = content.blog.page;
const posts = getBlogPosts(lang);
const categories = getAllCategories(lang);
const tags = getAllTags(lang);
const featuredPost = posts[0];
const remainingPosts = posts.slice(1);
---

<PageLayout
  title="Car AC Repair Blog | Tips, Guides & Expert Advice"
  description="Expert articles on car air conditioning repair, maintenance tips, troubleshooting guides, and auto AC cost breakdowns."
  lang={lang}
  keywords={['car AC blog', 'auto AC repair tips', 'car air conditioning guide', 'AC maintenance articles']}
>
  {/* Hero */}
  <section class="relative overflow-hidden hero-gradient text-[#f0ebe0]">
    <div class="hero-pattern"></div>
    <div class="relative z-10 mx-auto max-w-7xl px-4 py-16 lg:px-8 lg:py-24">
      <span class="hero-animate eyebrow-decorated text-sm font-semibold uppercase tracking-widest text-primary">{blogContent.heroEyebrow}</span>
      <h1 class="hero-animate hero-animate-delay-1 mt-4 text-4xl font-bold tracking-tight font-display sm:text-5xl">{blogContent.heroTitle}</h1>
      <p class="hero-animate hero-animate-delay-2 mt-6 text-lg text-[#f0ebe0]/65 max-w-2xl">{blogContent.heroDescription}</p>
      <!-- Category Tags in Hero -->
      <div class="hero-animate hero-animate-delay-2 mt-8 flex flex-wrap gap-2">
        <span class="rounded-full bg-white/10 px-4 py-1.5 text-xs font-semibold text-[#f0ebe0] hover:bg-white/20 transition-colors">{blogContent.allArticles}</span>
        {categories.map((cat) => (
          <span class="rounded-full border border-[#f0ebe0]/20 px-4 py-1.5 text-xs text-[#f0ebe0]/70 hover:bg-white/10 transition-colors">{cat}</span>
        ))}
      </div>
    </div>
  </section>

  {/* Featured Post */}
  {featuredPost && (
    <section class="py-14">
      <div class="container mx-auto px-4">
        <div class="flex items-center gap-2 mb-6" data-animate="fade-in-up">
          <span class="rounded-full gold-gradient px-4 py-1.5 text-xs font-semibold text-white">{blogContent.featured}</span>
        </div>
        <a
          href={getLocalizedPath(`/blog/${featuredPost.slug}`, lang)}
          class="group grid gap-8 lg:grid-cols-2 rounded-xl border border-border bg-card shadow-sm overflow-hidden hover:shadow-lg hover:border-primary/30 transition-all duration-300"
          data-animate="fade-in-up" data-animate-delay="100"
        >
          <div class="aspect-video lg:aspect-auto overflow-hidden bg-muted blog-card-image">
            <img
              src={featuredPost.image}
              alt={featuredPost.imageAlt}
              class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
              width="600"
              height="400"
              loading="eager"
            />
          </div>
          <div class="p-7 lg:p-9 flex flex-col justify-center">
            <span class="text-xs font-semibold text-primary">{featuredPost.category}</span>
            <h2 class="mt-2 text-2xl font-bold font-display">{featuredPost.title}</h2>
            <p class="mt-3 text-muted-foreground">{featuredPost.excerpt}</p>
            <div class="mt-4 flex items-center gap-4 text-sm text-muted-foreground">
              <span class="flex items-center gap-1.5">
                <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
                {new Date(featuredPost.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
              </span>
              <span class="flex items-center gap-1.5">
                <svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                {featuredPost.readTime}
              </span>
            </div>
            <span class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-primary group-hover:gap-3 transition-all">{blogContent.readFull} â†’</span>
          </div>
        </a>
      </div>
    </section>
  )}

  {/* All Posts */}
  <section class="py-14 lg:py-20">
    <div class="container mx-auto px-4">
      <div class="flex items-end justify-between mb-8" data-animate="fade-in-up">
        <h2 class="text-2xl font-bold font-display">{blogContent.latest}</h2>
        <p class="hidden text-sm text-muted-foreground md:block">{posts.length} {blogContent.articles}</p>
      </div>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {remainingPosts.map((post, i) => (
          <a
            href={getLocalizedPath(`/blog/${post.slug}`, lang)}
            class="group rounded-xl border border-border bg-card shadow-sm transition-all duration-300 hover:shadow-lg hover:border-primary/30 overflow-hidden card-hover-lift"
            data-animate="fade-in-up" data-animate-delay={String((i % 3) * 100)}
          >
            <div class="aspect-video overflow-hidden bg-muted blog-card-image">
              <img
                src={post.image}
                alt={post.imageAlt}
                class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
                width="400"
                height="225"
              />
            </div>
            <div class="p-5">
              <span class="text-xs font-semibold text-primary">{post.category}</span>
              <h3 class="mt-2 text-base font-semibold font-display line-clamp-2">{post.title}</h3>
              <p class="mt-2 text-sm text-muted-foreground line-clamp-2">{post.excerpt}</p>
              <div class="mt-3 flex items-center gap-3 text-xs text-muted-foreground">
                <span class="flex items-center gap-1">
                  <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
                  {new Date(post.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </span>
                <span class="flex items-center gap-1">
                  <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                  {post.readTime}
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  {/* Popular Topics */}
  <section class="py-14 lg:py-20 bg-secondary/40">
    <div class="container mx-auto px-4 text-center" data-animate="fade-in-up">
      <h2 class="text-2xl font-bold font-display mb-2">{blogContent.popularTopics}</h2>
      <p class="text-muted-foreground mb-6">{blogContent.popularDescription}</p>
      <div class="flex flex-wrap justify-center gap-2">
        {tags.map((tag) => (
          <span class="inline-flex items-center gap-1.5 rounded-full bg-primary/10 border border-primary/20 px-4 py-1.5 text-sm font-medium text-primary hover:bg-primary/15 transition-colors cursor-default">
            <svg class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" /><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" /></svg>
            {tag}
          </span>
        ))}
      </div>
    </div>
  </section>
</PageLayout>
