---
import PageLayout from '../../../layouts/PageLayout.astro';
import BlogCard from '../../../components/blog/BlogCard.astro';
import { getContentByLanguage } from '../../../lib/content';
import { getBlogPosts, getAllCategories, getAllTags } from '../../../lib/blog-data';

const lang = 'en' as const;
const content = getContentByLanguage(lang);
const blogContent = content.blog.page;
const posts = getBlogPosts(lang);
const categories = getAllCategories(lang);
const tags = getAllTags(lang);
const featuredPost = posts[0];
const remainingPosts = posts.slice(1);
---

<PageLayout
  title="Car AC Repair Blog | Tips, Guides & Expert Advice"
  description="Expert articles on car air conditioning repair, maintenance tips, troubleshooting guides, and auto AC cost breakdowns."
  lang={lang}
  keywords={['car AC blog', 'auto AC repair tips', 'car air conditioning guide', 'AC maintenance articles']}
>
  {/* Hero */}
  <section class="relative overflow-hidden hero-gradient text-[#f0ebe0]">
    <div class="hero-pattern"></div>
    <div class="relative z-10 mx-auto max-w-7xl px-4 py-16 lg:px-8 lg:py-24">
      <span class="hero-animate eyebrow-decorated text-sm font-semibold uppercase tracking-widest text-primary">{blogContent.heroEyebrow}</span>
      <h1 class="hero-animate hero-animate-delay-1 mt-4 text-4xl font-bold tracking-tight font-display sm:text-5xl">{blogContent.heroTitle}</h1>
      <p class="hero-animate hero-animate-delay-2 mt-6 text-lg text-[#f0ebe0]/65 max-w-2xl">{blogContent.heroDescription}</p>
      {/* Category Tags */}
      <div class="hero-animate hero-animate-delay-2 mt-8 flex flex-wrap gap-2" role="list" aria-label="Categories">
        <span class="rounded-full bg-white/10 px-4 py-1.5 text-xs font-semibold text-[#f0ebe0] hover:bg-white/20 transition-colors" role="listitem">{blogContent.allArticles}</span>
        {categories.map((cat) => (
          <span class="rounded-full border border-[#f0ebe0]/20 px-4 py-1.5 text-xs text-[#f0ebe0]/70 hover:bg-white/10 transition-colors" role="listitem">{cat}</span>
        ))}
      </div>
    </div>
  </section>

  {/* Featured Post */}
  {featuredPost && (
    <section class="py-14">
      <div class="container mx-auto px-4">
        <BlogCard
          post={featuredPost}
          lang={lang}
          variant="featured"
          loading="eager"
          readMoreLabel={blogContent.readFull}
          featuredLabel={blogContent.featured}
          animateDelay="100"
        />
      </div>
    </section>
  )}

  {/* All Posts */}
  <section class="py-14 lg:py-20">
    <div class="container mx-auto px-4">
      <div class="flex items-end justify-between mb-8" data-animate="fade-in-up">
        <h2 class="text-2xl font-bold font-display">{blogContent.latest}</h2>
        <p class="hidden text-sm text-muted-foreground md:block">{posts.length} {blogContent.articles}</p>
      </div>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {remainingPosts.map((post, i) => (
          <BlogCard
            post={post}
            lang={lang}
            readMoreLabel={blogContent.readMore}
            animateDelay={String((i % 3) * 100)}
          />
        ))}
      </div>
    </div>
  </section>

  {/* Popular Topics */}
  <section class="py-14 lg:py-20 bg-secondary/40">
    <div class="container mx-auto px-4 text-center" data-animate="fade-in-up">
      <h2 class="text-2xl font-bold font-display mb-2">{blogContent.popularTopics}</h2>
      <p class="text-muted-foreground mb-6">{blogContent.popularDescription}</p>
      <div class="flex flex-wrap justify-center gap-2" role="list" aria-label="Popular topics">
        {tags.map((tag) => (
          <span class="inline-flex items-center gap-1.5 rounded-full bg-primary/10 border border-primary/20 px-4 py-1.5 text-sm font-medium text-primary hover:bg-primary/15 transition-colors cursor-default" role="listitem">
            <svg class="h-3 w-3" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9.568 3H5.25A2.25 2.25 0 003 5.25v4.318c0 .597.237 1.17.659 1.591l9.581 9.581c.699.699 1.78.872 2.607.33a18.095 18.095 0 005.223-5.223c.542-.827.369-1.908-.33-2.607L11.16 3.66A2.25 2.25 0 009.568 3z" /><path stroke-linecap="round" stroke-linejoin="round" d="M6 6h.008v.008H6V6z" /></svg>
            {tag}
          </span>
        ))}
      </div>
    </div>
  </section>
</PageLayout>
