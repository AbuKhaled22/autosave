---
interface Props {
  items: { label: string; description: string }[];
}

const { items } = Astro.props;
---

<section class="bg-gradient-to-b from-background to-secondary/40 py-10">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 gap-4 sm:grid-cols-4 sm:gap-0">
      {items.map((badge, i) => (
        <div
          class="text-center p-4 rounded-xl hover:bg-primary/5 transition-colors sm:border-e sm:border-border/50 sm:last:border-e-0 sm:rounded-none"
          data-animate="fade-in-up"
          data-animate-delay={String((i + 1) * 100)}
        >
          <div class="text-sm font-bold text-foreground font-display">{badge.label}</div>
          <div class="text-xs text-muted-foreground mt-1.5">{badge.description}</div>
        </div>
      ))}
    </div>
  </div>
</section>
