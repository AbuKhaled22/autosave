---
interface Props {
  content: {
    eyebrow: string;
    title: string;
    description: string;
    items: { title: string; description: string }[];
  };
}

const { content } = Astro.props;
---

<section class="py-20 lg:py-28" id="benefits">
  <div class="container mx-auto px-4">
    <div class="text-center mb-14" data-animate="fade-in-up">
      <span class="eyebrow-decorated text-sm font-semibold uppercase tracking-widest text-accent">{content.eyebrow}</span>
      <h2 class="mt-4 text-3xl font-bold tracking-tight font-display sm:text-4xl">{content.title}</h2>
      <p class="mt-4 text-lg text-muted-foreground max-w-2xl mx-auto">{content.description}</p>
    </div>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {content.items.map((item, i) => (
        <div
          class="rounded-xl border border-border bg-card p-7 shadow-sm card-hover-lift border-t-2 border-t-primary/25 hover:border-t-primary/60"
          data-animate="fade-in-up"
          data-animate-delay={String((i + 1) * 100)}
        >
          <h3 class="text-lg font-semibold text-card-foreground mb-2 font-display">{item.title}</h3>
          <p class="text-sm text-muted-foreground leading-relaxed">{item.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
