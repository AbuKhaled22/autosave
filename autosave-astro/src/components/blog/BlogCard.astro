---
/**
 * BlogCard — reusable blog post card used on index pages, related posts,
 * and the homepage preview. Replaces 4+ duplicated card blocks.
 *
 * Variants:
 *   - "default"  — standard grid card (blog listing, related posts, home preview)
 *   - "featured" — larger horizontal card with two-column layout (blog index hero)
 */
import type { Language } from '../../lib/i18n';
import { getLocalizedPath } from '../../lib/i18n';
import type { BlogPost } from '../../lib/blog-data';

interface Props {
  post: BlogPost;
  lang: Language;
  variant?: 'default' | 'featured';
  loading?: 'eager' | 'lazy';
  readMoreLabel: string;
  featuredLabel?: string;
  animateDelay?: string;
}

const {
  post,
  lang,
  variant = 'default',
  loading = 'lazy',
  readMoreLabel,
  featuredLabel,
  animateDelay,
} = Astro.props;

const dateLocale = lang === 'ar' ? 'ar-SA' : 'en-US';
const formattedDate = new Date(post.date).toLocaleDateString(dateLocale, {
  year: 'numeric',
  month: variant === 'featured' ? 'long' : 'short',
  day: 'numeric',
});

const href = getLocalizedPath(`/blog/${post.slug}`, lang);
---

{variant === 'featured' ? (
  <article data-animate="fade-in-up" data-animate-delay={animateDelay}>
    {featuredLabel && (
      <div class="flex items-center gap-2 mb-6">
        <span class="rounded-full gold-gradient px-4 py-1.5 text-xs font-semibold text-white">{featuredLabel}</span>
      </div>
    )}
    <a
      href={href}
      aria-label={`${readMoreLabel}: ${post.title}`}
      class="group grid gap-8 lg:grid-cols-2 rounded-xl border border-border bg-card shadow-sm overflow-hidden hover:shadow-lg hover:border-primary/30 transition-all duration-300"
    >
      <div class="aspect-video lg:aspect-auto overflow-hidden bg-muted blog-card-image">
        <img
          src={post.image}
          alt={post.imageAlt}
          class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
          width="600"
          height="400"
          loading={loading}
          fetchpriority={loading === 'eager' ? 'high' : undefined}
        />
      </div>
      <div class="p-7 lg:p-9 flex flex-col justify-center">
        <span class="text-xs font-semibold text-primary">{post.category}</span>
        <h2 class="mt-2 text-2xl font-bold font-display">{post.title}</h2>
        <p class="mt-3 text-muted-foreground">{post.excerpt}</p>
        <div class="mt-4 flex items-center gap-4 text-sm text-muted-foreground">
          <span class="flex items-center gap-1.5">
            <svg class="h-3.5 w-3.5" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
            {formattedDate}
          </span>
          <span class="flex items-center gap-1.5">
            <svg class="h-3.5 w-3.5" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            {post.readTime}
          </span>
        </div>
        <span class="mt-4 inline-flex items-center gap-2 text-sm font-semibold text-primary group-hover:gap-3 transition-all">
          {readMoreLabel}
          <svg class="h-3.5 w-3.5 rtl:-scale-x-100" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
        </span>
      </div>
    </a>
  </article>
) : (
  <article
    data-animate="fade-in-up"
    data-animate-delay={animateDelay}
  >
    <a
      href={href}
      aria-label={`${readMoreLabel}: ${post.title}`}
      class="group flex flex-col h-full rounded-xl border border-border bg-card shadow-sm transition-all duration-300 hover:shadow-lg hover:border-primary/30 overflow-hidden card-hover-lift"
    >
      <div class="aspect-video overflow-hidden bg-muted blog-card-image">
        <img
          src={post.image}
          alt={post.imageAlt}
          class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
          loading={loading}
          width="400"
          height="225"
        />
      </div>
      <div class="p-5 flex flex-col flex-1">
        <span class="text-xs font-semibold text-primary">{post.category}</span>
        <h3 class="mt-2 text-base font-semibold font-display line-clamp-2">{post.title}</h3>
        <p class="mt-2 text-sm text-muted-foreground line-clamp-2">{post.excerpt}</p>
        <div class="mt-3 flex items-center gap-3 text-xs text-muted-foreground">
          <span class="flex items-center gap-1">
            <svg class="h-3 w-3" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>
            {formattedDate}
          </span>
          <span class="flex items-center gap-1">
            <svg class="h-3 w-3" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            {post.readTime}
          </span>
        </div>
        <span class="mt-auto pt-3 inline-flex items-center gap-1 text-sm font-medium text-primary group-hover:gap-2 transition-all">
          {readMoreLabel}
          <svg class="h-3.5 w-3.5 rtl:-scale-x-100" aria-hidden="true" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" /></svg>
        </span>
      </div>
    </a>
  </article>
)}
